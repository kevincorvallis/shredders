{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["sfo1"],
  "functions": {
    "src/app/api/scraper/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/scraper/run",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/check-weather-alerts",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/check-powder-alerts",
      "schedule": "0 7 * * *"
    }
  ]
}
