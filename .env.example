# ===========================================
# Shredders (PowderTracker) Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# -----------------
# Required: Supabase
# -----------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Alternative: Direct Postgres (if not using Supabase client)
# DATABASE_URL=postgresql://user:password@host:5432/database

# -----------------
# Optional: AI Features
# -----------------
# Required for AI chat and summaries
ANTHROPIC_API_KEY=sk-ant-...

# Required for arrival time predictions
OPENAI_API_KEY=sk-...

# -----------------
# Optional: Push Notifications (iOS)
# -----------------
APNS_KEY_ID=your-key-id
APNS_TEAM_ID=your-team-id
APNS_KEY_PATH=/path/to/AuthKey.p8
APNS_BUNDLE_ID=com.shredders.powdertracker
APNS_PRODUCTION=false

# -----------------
# Optional: AWS (for DynamoDB, S3)
# -----------------
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# -----------------
# Optional: Alerts & Monitoring
# -----------------
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
SENDGRID_API_KEY=SG.xxx
ALERT_EMAIL_TO=alerts@example.com
ALERT_EMAIL_FROM=noreply@example.com

# -----------------
# Optional: Cron Jobs
# -----------------
CRON_SECRET=your-cron-secret

# -----------------
# Optional: URLs
# -----------------
NEXT_PUBLIC_BASE_URL=https://shredders-bay.vercel.app
NEXT_PUBLIC_API_URL=https://shredders-bay.vercel.app

# -----------------
# Development Only
# -----------------
# JWT_ACCESS_SECRET=your-jwt-secret-for-dev
